-- Obtenha o PlayerGui do jogador
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Desative todas as interfaces padrão do Roblox
local starterGui = game:GetService("StarterGui")

-- Desativa todas as interfaces padrão do Roblox (chat, lista de jogadores, etc.)
starterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)

-- Remova todas as ScreenGui e outros objetos de interface do PlayerGui
for _, object in pairs(playerGui:GetChildren()) do
    if object:IsA("ScreenGui") then
        object:Destroy()
    end
end

-- Crie uma ScreenGui para a tela preta
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FullScreenUI"
screenGui.IgnoreGuiInset = true -- Ignora o menu superior do Roblox
screenGui.ResetOnSpawn = false -- Garante que a GUI não desapareça ao reiniciar
screenGui.Parent = playerGui

-- Crie um Frame para o fundo preto
local backgroundFrame = Instance.new("Frame")
backgroundFrame.Size = UDim2.new(1, 0, 1, 0) -- Preenche toda a tela
backgroundFrame.Position = UDim2.new(0, 0, 0, 0)
backgroundFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Cor do fundo (preto)
backgroundFrame.ZIndex = 10 -- Prioridade mais alta
backgroundFrame.Parent = screenGui

-- Tabela para armazenar os TextLabels
local paragraphLabels = {}

-- Função para criar um parágrafo de texto centralizado
local function createParagraph(text, order, totalParagraphs)
    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(0.8, 0, 0.1, 0) -- Largura de 80% da tela e altura relativa
    -- Calcula a posição vertical para centralizar todos os parágrafos proporcionalmente
    local spacing = 0.12 -- Espaçamento entre os parágrafos
    local baseY = 0.5 - (totalParagraphs * spacing) / 2
    textLabel.Position = UDim2.new(0.5, 0, baseY + (order - 1) * spacing, 0)
    textLabel.AnchorPoint = Vector2.new(0.5, 0) -- Centraliza horizontalmente
    textLabel.BackgroundTransparency = 1 -- Sem fundo
    textLabel.Text = text
    textLabel.TextColor3 = Color3.new(1, 1, 1) -- Cor do texto (branca)
    textLabel.Font = Enum.Font.SourceSans -- Fonte
    textLabel.TextSize = 36 -- Tamanho da fonte (ajustado)
    textLabel.TextScaled = false -- Desativa a escala automática
    textLabel.TextXAlignment = Enum.TextXAlignment.Center -- Centraliza o texto horizontalmente
    textLabel.TextYAlignment = Enum.TextYAlignment.Center -- Centraliza o texto verticalmente
    textLabel.ZIndex = 11 -- Um nível acima do fundo
    textLabel.Parent = backgroundFrame

    -- Salvar o TextLabel na tabela para edição posterior
    paragraphLabels[order] = textLabel
end

-- Função para atualizar o texto de um parágrafo
local function updateParagraph(order, newText)
    local textLabel = paragraphLabels[order]
    if textLabel then
        textLabel.Text = newText
    else
        warn("Parágrafo com índice " .. order .. " não encontrado.")
    end
end

-- Função para tornar todos os jogadores invisíveis
local function makePlayersInvisible()
    for _, player in pairs(game.Players:GetChildren()) do
        if player.Character then
            -- Tornar todas as partes do jogador invisíveis
            for _, part in pairs(player.Character:GetChildren()) do
                if part:IsA("BasePart") then
                    part.Transparency = 1 -- Deixa a parte invisível
                    part.CanCollide = false -- Desativa a colisão para que não interfira no movimento
                end
            end
        end
    end
end

-- Função para remover todos os objetos do Workspace, incluindo efeitos
local function removeAllObjectsAndEffects()
    for _, object in pairs(game.Workspace:GetChildren()) do
        if object ~= game.Workspace then
            -- Se o objeto for um efeito de partícula, som ou luz, remova-o
            if object:IsA("ParticleEmitter") or object:IsA("Sound") or object:IsA("PointLight") or object:IsA("SpotLight") then
                object:Destroy() -- Remove os efeitos do Workspace
            else
                -- Caso contrário, destrua o objeto
                object:Destroy()
            end
        end
    end
end

-- Função para reduzir a qualidade dos gráficos e efeitos
local function reduceGraphicsEffects()
    -- Desligar sombras dinâmicas em todas as partes
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") then
            -- Desabilita o sombreamento das partes
            part.CastShadow = false
        end
    end

    -- Desativar luzes e efeitos de iluminação dinâmicos
    for _, light in pairs(workspace:GetDescendants()) do
        if light:IsA("Light") then
            light.Enabled = false
        end
    end

    -- Desativar partículas
    for _, particle in pairs(workspace:GetDescendants()) do
        if particle:IsA("ParticleEmitter") then
            particle.Enabled = false
        end
    end

    -- Diminuir a quantidade de objetos que podem causar efeitos gráficos pesados
    for _, model in pairs(workspace:GetDescendants()) do
        if model:IsA("Model") and model:FindFirstChild("Humanoid") then
            model.Humanoid.MaxHealth = 1 -- Reduz a complexidade de modelos humanos
        end
    end

    print("Gráficos reduzidos: sombras, luzes e partículas desativadas.")
end

-- Desativa a renderização 3D
game:GetService("RunService"):Set3dRenderingEnabled(false)
makePlayersInvisible()
removeAllObjectsAndEffects()
reduceGraphicsEffects()
-- Criar a tela preta
if not screenGui.Parent then
    screenGui.Parent = playerGui
    -- Adiciona os parágrafos
    local paragraphs = {
        "Username: N/A",
        "Gems: N/A",
        "Fruits: N/A",
        "Place: N/A"
    }
    for i, paragraph in ipairs(paragraphs) do
        createParagraph(paragraph, i, #paragraphs) -- Passa o total de parágrafos para centralizar melhor
    end
end

-- Torna jogadores invisíveis e remove objetos/effects

